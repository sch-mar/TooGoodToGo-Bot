version: 1
formatters:
 standard:
    format: "%(asctime)s:%(levelname)s:%(message)s"
    datefmt: "%H:%M.%S"
handlers:
  file:
    class: logging.handlers.TimedRotatingFileHandler
    when: d
    #suffix: "%Y%m%d"
    level: DEBUG
    formatter: standard
    filename: "log/.log"
  console:
    class: logging.StreamHandler
    level: INFO
    formatter: standard
    stream: ext://sys.stdout
# loggers:
#   lg:
#     level: DEBUG
#     handlers: [file, console]
root:
  level: DEBUG
  handlers: [file, console]
